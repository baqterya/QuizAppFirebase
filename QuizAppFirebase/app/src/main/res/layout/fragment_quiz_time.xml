<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.QuizTimeFragment">

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progress_bar_quiz_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:minHeight="20dp"
        android:max="100"
        android:min="0"
        android:progressTint="@color/new_error"
        android:progress="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_quiz_time_question"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/text_view_quiz_time_point_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point_dummy"
        android:textSize="30sp"
        android:textColor="@color/new_on_background"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_view_quiz_time_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_dummy"
        android:textSize="45sp"
        android:textColor="@color/new_on_background"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_quiz_time_point_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/text_view_quiz_time_answer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        android:text="@string/answer_dummy"
        android:layout_marginTop="115dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_quiz_time_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_view_quiz_time_answer_2"
        />

    <Button
        android:id="@+id/text_view_quiz_time_answer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        android:text="@string/answer_dummy"
        app:layout_constraintTop_toTopOf="@id/text_view_quiz_time_answer_1"
        app:layout_constraintStart_toEndOf="@id/text_view_quiz_time_answer_1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/text_view_quiz_time_answer_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        android:text="@string/answer_dummy"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_quiz_time_answer_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_view_quiz_time_answer_4"
        />

    <Button
        android:id="@+id/text_view_quiz_time_answer_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        android:text="@string/answer_dummy"
        app:layout_constraintTop_toTopOf="@id/text_view_quiz_time_answer_3"
        app:layout_constraintStart_toEndOf="@id/text_view_quiz_time_answer_3"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>